@model List<Product>
<a asp-controller="Product" asp-action="AddDiscount"><i class="bi bi-plus-circle"> </i></a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var product in Model)
            {
                <tr>
                    <th scope="row">#</th>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-controller="Product" asp-action="Show" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
