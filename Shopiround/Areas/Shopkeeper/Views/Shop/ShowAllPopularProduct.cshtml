@using Shopiround.Models.Statistics;
@{
    int i = 0;
    int no_product = 1;
    List<ProductCount> popularProducts = ViewData["ProductCount"] as List<ProductCount>;
}

<style>
    .productImage {
        height: 50px;
        width: 50px;
    }

    .productName {
        font-size: 14px;
        line-height: 14px;
        font-weight: 500;
    }

    .productPrice {
        font-size: 16px;
        line-height: 16px;
        font-weight: 700;
    }

    .shopInfo {
        font-size: 12px;
        line-height: 12px;
        font-weight: 400;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .cat {
        height: 50px;
        width: 50px;
        border-radius: 50%;
    }
</style>



<div style="font-size: 1.4rem; float: left; font-weight: 600;"><img src="~/images/assets/item.png" style="height: 30px" />Trending Products</div>
<div class="clearfix"></div>
<div class="row mt-2">
    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Search Count</th>
            </tr>
        </thead>
        @foreach (var item in popularProducts)
        {

            <tr>
                <td>@no_product )</td>
                <td> <a href="@Url.Action("Show", "Product", new { area = "Shopkeeper",  Id = item.Id })">@item.Product.Name </a></td>
                <td>@item.Count</td>
            </tr>

            no_product++;
        }
    </table>

</div>
<partial name="_Footer" />
