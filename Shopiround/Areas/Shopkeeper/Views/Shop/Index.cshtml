@using Shopiround.Models.Statistics;
@model ShopkeeperHomeVM
@{
    int i = 0;
    int no_key = 1;
    int no_product = 1;
    List<KeywordsCount> keywords = ViewData["KeywordCount"] as List<KeywordsCount>;
    List<ProductCount> popularProducts = ViewData["ProductCount"] as List<ProductCount>;
}

<div class="mt-3 mb-3 d-flex justify-content-between align-items-center">
    <a class="d-flex flex-column justify-content-center align-items-center mx-auto text-center" asp-area="Shopkeeper" asp-controller="Product" asp-action="Create">
        <div>
            <i class="bi bi-plus-circle"> </i>
        </div>
        <div>Add Product</div>
    </a>
    <a class="d-flex flex-column justify-content-center align-items-center mx-auto text-center" asp-area="Shopkeeper" asp-controller="Product" asp-action="AddDiscount">
        <div>
            <i class="bi bi-plus-circle"> </i>
        </div>
        <div>Add Discount</div>
    </a>
</div>

<div class="mt-3 mb-3 d-flex justify-content-between align-items-center">
    <a class="d-flex flex-column justify-content-center align-items-center mx-auto text-center" asp-area="Shopkeeper" asp-controller="Product" asp-action="ShowAllProducts">
        <div>
            <img class="cat" src="~/images/assets/flashSales.png" />
        </div>
        <div>Show all product</div>
    </a>
    <a class="d-flex flex-column justify-content-center align-items-center mx-auto text-center" >
        <div>
            <img class="cat" src="~/images/assets/nearYou.png" />
        </div>
        <div>Near you</div>
    </a>
</div>

<hr />


<style>
    .productImage {
        height: 50px;
        width: 50px;
    }
    .productName {
        font-size: 14px;
        line-height: 14px;
        font-weight: 500;
    }
    .productPrice {
        font-size: 16px;
        line-height: 16px;
        font-weight: 700;
    }
    .shopInfo {
        font-size: 12px;
        line-height: 12px;
        font-weight: 400;
    }
    a {
        text-decoration: none;
        color: black;
    }
    .cat {
        height: 50px;
        width: 50px;
        border-radius: 50%;
    }
</style>



    <div style="font-size: 1.4rem; float: right; font-weight: 600;"><img src="~/images/assets/item.png" style="height: 30px"/>Trending Products</div>
    <div class="clearfix"></div>
    <div class="row mt-2">
        @foreach (var item in popularProducts)
        {
            string distanceId = "distance" + i.ToString();
            <div class="col-6 Search mt-2" data-product-id="@item.Id" data-product-name="@item.Product.Name">
                <a href="@Url.Action("Show", "Product", new { area = "Shopkeeper",  Id = item.Id })">
                    <div class="border border-2 rounded-3 p-1">
                    <div style="display: flex;">
                        <div>@no_product)</div>
                        <img class="productImage" src="@item.Product.ImageURL" />
                    </div>
                        
                        <div class="p-1">
                        <div class="productName mt-1">@item.Product.Name</div>
                        <div class="productPrice mt-1">BDT @item.Product.Price.00</div>
                            

                        <div></div>
                    </div>
                    </div>
                    
                </a>
            </div>
            ++i;
        }

    <a style="font-size: 1rem; float: right; font-weight: 600;" href="@Url.Action("ShowAllPopularProduct", "Shop", new { area = "Shopkeeper"})">See more</a>


</div>

<hr />
<div style="font-size: 1.4rem; float: right; font-weight: 600;"><img src="~/images/assets/item.png" style="height: 30px" />Popular Keywords</div>
<div class="clearfix"></div>
<div class="row mt-2">
    
    @foreach (var keyword in keywords)
    {
        <div class="card" style="height: 2rem; width: 100%;">
            <div style="display: flex; align-items: center; justify-content: space-between;">
                <div style="margin-right: 2px;">@no_key )</div>
                <div style="margin-left: 2px; margin-right: 2px;">@keyword.Keyword</div>
                <div>Search Count: @keyword.Count</div>
            </div>
        </div>

        no_key++;
    }
    <a style="font-size: 1rem; float: right; font-weight: 600;" href="@Url.Action("ShowAllKeywords", "Shop", new { area = "Shopkeeper"})">See more</a>
    </div>

<partial name="_Footer" />






