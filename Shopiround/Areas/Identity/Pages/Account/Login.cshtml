@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <div class="d-flex justify-content-center" style="margin-top: 80px; font-size: 24px; line-height: 24px; font-weight: 800;"><div><i class="bi bi-radar" style="font-size: 30px;"></i> Shopiround</div></div>
    <div class="row mt-4 ms-1 me-1 border border-1 rounded pt-3">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div class="fs-4 fw-bold">Log in</div>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mt-4 mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3 mt-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <p>
                            <a class="text-decoration-underline" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                        </p>
                        <p>
                            <a class="text-decoration-underline" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New user? Register</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
        </div>
<partial name="_Footer" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
