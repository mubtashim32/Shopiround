@model UserProfile

<div class="container w-75 mt-2 p-4 border border-2">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ImageURL" hidden />
        <div class="row">
            <div class="col-4">
                <div class="card h-100 d-flex">
                    <img id="output" src="~/images/User/DefaultUserProfileImg.png" class="card-img-top h-75 w-75 mx-auto mt-3" alt="...">
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <input type="file" name="file" class="form-control" onchange="loadFile(event)">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-8">
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="Name" placeholder="User Name">
                    <label asp-for="Name">Product Name</label>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" asp-for="Email" placeholder="Email" style=" height: 150px;"></textarea>
                    <label asp-for="Email">Description</label>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" asp-for="MobileNo" placeholder="Mobile No" style=" height: 150px;"></textarea>
                    <label asp-for="MobileNo">Mobile No</label>
                </div>
                <div class="form-floating">
                    <textarea class="form-control" asp-for="Address" placeholder="Address" style=" height: 150px;"></textarea>
                    <label asp-for="Address">Address</label>
                </div>
            </div>

        </div>

        <button id="submit" type="submit" class="btn btn-primary float-end">Submit</button>
        <div class="clearfix"></div>
    </form>
</div>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('output');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };
</script>



